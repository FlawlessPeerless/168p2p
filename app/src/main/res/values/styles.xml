<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- home 平台数据按钮通用样式 -->
    <style name="PlatformIcon">
        <item name="android:background">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- home 公共 title -->
    <style name="HomeCommonTitle">
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawableLeft">@drawable/ic_home_novice</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- common 分割线 vertical -->
    <style name="DividerVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ececec</item>
    </style>

    <!-- common 分割线 horizontal -->
    <style name="DividerHorizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ececec</item>
    </style>

    <!-- investment list item -->
    <style name="InvestmentItemLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#bebebe</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <!-- investment list item -->
    <style name="InvestmentItemRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- more button style -->
    <style name="MoreButton">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:drawableEnd">@drawable/arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <!-- 用户中心 - 图标按钮 -->
    <style name="UserCenterButton">
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

</resources>
